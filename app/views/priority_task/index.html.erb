<h1 class="text-5xl text-center mt-6 font-extralight">Good day, <%= current_user.name %>!</h1>
<p class="text-6xl mt-9 text-center font-light text-blue-500">Priority Tasks</p>
<p class="text-xl mt-4 mb-8 text-center font-light">You can select/unselect priority tasks under 'Edit Task'</p>
<p class="text-gray-200 text-center mb-4">___________________________________________________________________________________________________</p>

<div class="text-center flex flex-wrap flex-row justify-center items-center overflow-x-auto">

<% @tasks.each do |task| %>
<% if task.priority_task == true %>
    <div class="h-min w-auto p-2 bg-white rounded xl border-2 border-black m-4 rounded-3xl ">
        <div class="flex border-box p-1 flex-col">
            <h1 class="text-4xl">  <%= task.title %> </h1>
            <p class="text-xl mt-4"> Description:  <%= task.description %> </p>
            <p class="text-gray-200 text-center mb-2">_______________________________________</p>

            <% if task.completed == true %>
            <p class="text-l text-blue-500"> Completed Task?: Yes! üòÄ  </p>
            <%else%>
            <p class="text-l text-red-500"> Completed Task?: Not yet üôÅ </p>
            <%end%>

            <p class="text-l mt-1 text-blue-500"> Start Date:  <%= task.start_date.to_date %> </p>
            
            <%if task.due_date == Date.current %>
            <p class="text-l mt-1 text-red-500"> Due Today: Yes</p>
            <p class="text-s text-gray-400 font-light"> (can be viewed on Tasks Due Today if not completed)</p>
            <%else%>
            <p class="text-l mt-1 text-blue-500"> Due Today: No</p>
            <p class="text-l mt-1 text-blue-500"> Due on:  <%= task.due_date.to_date %> </p>
            <%end%>

            <%= link_to 'Edit Task', edit_user_task_path(current_user, task), class: "hover:bg-blue-600 rounded-xl text-center text-sm bg-blue-500 rounded py-2 text-white mt-2" %>
        </div>
    </div>
<%end%>
<%end%>
</div>


