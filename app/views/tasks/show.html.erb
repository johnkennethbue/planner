<div class="text-center flex flex-wrap flex-col items-center justify-center overflow-x-auto md:flex-col">
<div class="h-min w-auto p-2 bg-white rounded xl border-2 border-black m-4 rounded-3xl">
        <div class="flex border-box p-1 flex-col">
            <h1 class="text-5xl">  <%= @task.title %> </h1>
            <p class="text-2xl mt-4"> Description:  <%= @task.description %> </p>
            <p class="text-xl mt-8"> Completed:  <%= @task.completed %> </p>
            <p class="text-xl mt-4"> Start Date:  <%= @task.start_date.to_date %> </p>
            <p class="text-xl mt-4"> Due Date:  <%= @task.due_date.to_date %> </p>
            <%= link_to 'Edit Task', edit_user_task_path(current_user, @task), class: "rounded-xl text-center text-sm bg-blue-500 rounded py-2 text-white mt-2" %>
            <td><%= link_to 'Delete Task', @tasks, class: "rounded-xl text-center text-sm bg-red-400 rounded py-2 text-white mt-2", method: :delete, data: { confirm: "Are you sure you want to delete this task?" }%></td>
        </div>
    </div>
</div>

