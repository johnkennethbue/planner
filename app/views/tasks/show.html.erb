<div class="text-center flex flex-wrap flex-col items-center justify-center overflow-x-auto md:flex-col">
<div class="h-min w-auto p-2 bg-white rounded xl border-2 border-black m-4">
        <div class="flex border-box p-1 flex-col">
            <h1 class="text-5xl">  <%= @task.title %> </h1>
            <p class="text-xl mt-8">  <%= @task.description %> </p>
            <p class="text-xl mt-8">  <%= @task.completed %> </p>
            <p class="text-xl mt-8">  <%= @task.start_date %> </p>
            <p class="text-xl mt-8">  <%= @task.due_date %> </p>
            <%= link_to 'Edit Task', edit_task_path(@task), class: "text-center text-sm bg-blue-500 rounded py-2 text-white mt-2" %>
            <td><%= link_to 'Delete Task', @task, class: "text-center text-sm bg-blue-500 rounded py-2 text-white mt-2", method: :delete %></td>
        </div>
    </div>
</div>

