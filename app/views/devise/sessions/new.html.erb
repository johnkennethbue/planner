<%= form_for(resource, as: resource_name, url: session_path(resource)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="flex items-center min-h-screen bg-white dark:bg-gray-900">
    <div class="container mx-auto">
        <div class="max-w-md mx-auto my-10">
            <div class="text-center">
                <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Welcome to Planner App</h1>
                <p class="text-gray-500 dark:text-gray-400">Sign in to your account to continue</p>
                  <% if flash[:notice].present? %>
                   <p><%= flash[:notice] %></p>
                  <% end %>
            </div>
            <div class="m-7">                                  
                    <div class="mb-6">
                         <%= f.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
                         <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                          <%= f.label :password, class: "text-sm text-gray-600 dark:text-gray-400" %>
                     <% if devise_mapping.rememberable? %>
                       <div class="field">
                        <%= f.check_box :remember_me %>
                         <%= f.label :remember_me %>
                      </div>
                    <% end %>                        </div>
                           <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
                    </div>
                    <div class="mb-6">
                        <%= f.submit "Log in", class: "w-full px-3 py-4 text-white bg-blue-500 rounded-md focus:bg-blue-600 focus:outline-none" %>
                    </div>
             
                    <p class="text-sm text-center text-gray-400">Don&#x27;t have an account yet?    <%= link_to 'Sign up', new_user_registration_path, class: "text-indigo-400 focus:outline-none focus:underline focus:text-indigo-500 dark:focus:border-indigo-800"%>

                </form>
            </div>
        </div>
    </div>
</div>
       <% end %>