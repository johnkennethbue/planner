<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
<div class="flex items-center min-h-screen bg-white dark:bg-gray-900">
 <div class="flex flex-row w-screen h-screen">
   <%= image_tag "bg_signup2.jpg" %>
  </div>
    <div class="container mx-auto mb-8">
        <div class="max-w-md mx-auto">
            <div class="text-center mb-4">
              <%= image_tag "logo_signup.png", class: "ml-52" %>
                <h1 class="my-3 text-2xl font-semibold text-gray-700 dark:text-gray-200">Create a New Account</h1>
                <p class="text-gray-500 dark:text-gray-400">Please complete the form to continue</p>
              <%= render "devise/shared/error_messages", resource: resource %>
            </div>
  <div>     
  <div class="mb-4">
    <%= f.label :name, class: "mb-2 text-sm text-gray-600 dark:text-gray-400" %><br />
    <%= f.text_field :name, class: "text-xs w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :surname, class: "mb-2 text-sm text-gray-600 dark:text-gray-400" %><br />
    <%= f.text_field :surname, class: "text-xs w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: "text-sm text-gray-600 dark:text-gray-400" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "text-xs w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "mb-2 text-sm text-gray-600 dark:text-gray-400" %>
    <% if @minimum_password_length %>
    <em class="text-s text-gray-400 outline-none">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "text-xs w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "mb-2 text-sm text-gray-600 dark:text-gray-400" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-xs w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Sign Up & Log In", class: "text-xs w-full px-3 py-4 text-white bg-blue-500 rounded-md focus:bg-blue-600 focus:outline-none" %>
  </div>
            </div>
        </div>
    </div>
</div>
<% end %>